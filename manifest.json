{
  "manifest_version": 3,
  "name": "Web Insights Companion",
  "version": "1.1.0",
  "description": "AI-powered web page analyzer and assistant",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}